<div id="pageHeader"><h1><%= @category.title %> </h1></div>



<% Post.where(:catgegory_id => @category.id).order('created_at DESC').each do |p|%>
<% user = User.find_by_id(p.user_id)%>
<h3><%=link_to p.title.capitalize, p%> </h3> av <%= link_to user.fname.capitalize + " " +user.lname.capitalize, user%>
<small><%= p.created_at.strftime("%d-%m-%Y")%></small>
<p><%= p.content.truncate(140)%></p>
<% end %>

